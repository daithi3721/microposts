<% if logged_in? %>
  <div class="stats">
      <a href="<%= followings_user_path(current_user) %>">
          <strong id="following" class="stat">
              <%= current_user.following_users.count %>
          </strong>
          following
      </a>
      <a href="<%= followers_user_path(current_user) %>">
          <strong id="followers" class="stat">
            
              <%= current_user.follower_users.count %>
          </strong>
          followers
      </a>
  </div>
<% end %>